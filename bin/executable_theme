#!/usr/bin/env zsh
#
# Synchronize Kitty terminal theme with GUI light/dark theme.
#

THEME_MODE=$($HOME/.zshfunctions/appearance)
THEME_NAME="Default"

case "$THEME_MODE" in
	dark)
		THEME_NAME="Solarized Dark"
		;;
	light)
		THEME_NAME="Solarized Light"
		;;
esac

kitty +kitten themes  --config-file-name /tmp/kitty-theme.conf --reload-in=all "$THEME_NAME"

